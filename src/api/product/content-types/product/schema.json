{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "product"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "default": "Bat",
      "required": true,
      "maxLength": 10,
      "minLength": 3
    },
    "slug": {
      "type": "uid",
      "required": true
    },
    "description": {
      "type": "richtext",
      "required": false
    },
    "image": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": true
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "bat",
        "t-shirt",
        "catelogue",
        "file",
        "system"
      ]
    },
    "size": {
      "type": "string",
      "required": true
    },
    "colour": {
      "type": "enumeration",
      "enum": [
        "red",
        "blue",
        "green",
        "black",
        "white",
        "grey",
        "yellow"
      ]
    },
    "price": {
      "type": "integer",
      "required": true,
      "default": 0
    },
    "avliableQty": {
      "type": "integer"
    }
  }
}
